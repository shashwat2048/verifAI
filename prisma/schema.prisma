generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid()) @map("_id")
  clerkId      String   @unique
  name         String   @default("User")
  email        String   @unique
  analysesDone Int      @default(0)
  scans        Scan[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Scan {
  id          String   @id @default(cuid()) @map("_id")
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
  mediaType   String   // e.g. "image" | later "video" | "audio" | "text"
  imageUrl    String?  // or generic inputUrl
  isDeepfake  Boolean
  confidence  Float    // 0–1 or 0–100, match existing conventions if any
  explanation String?
  rawResponse Json?
  createdAt   DateTime @default(now())
}


